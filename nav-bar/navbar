/*  Setting the bar to the top / high z-index but not too high / color: black/transparent  */

.main-navigation {
  position: fixed;
  z-index: 50;
  background: hsla(0, 0%, 0%, 0.6);
}
/*  Navbar links should be white  */
.main-navigation a {
  color: white !important;
}

/*  Top Navigation Meny CSS  */
/*  Setting the general text type and size  */
